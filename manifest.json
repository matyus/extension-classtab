{
  "manifest_version": 2,
  "name": "Classtab Extension",
  "version": "1.0",
  "description": "See what tuning a song is in before clicking on it!",
  "icons": {
    "128": "icon_128.png",
    "48": "icon_48.png",
    "32": "icon_32.png",
    "16": "icon_16.png"
  },
  "background": {
    "persistent": false,
    "scripts": [
      "bower_components/underscore/underscore-min.js",
      "bower_components/jquery/dist/jquery.min.js",
      "background.js"
    ]
  },
  "permissions": [
    "http://www.classtab.org/",
    "contextMenus",
    "declarativeContent",
    "storage",
    "tabs"
  ],
  "page_action": {
    "default_title": "Classtab Extension",
    "default_icon": "icon_16.png",
    "default_popup": "window.html"
  },
  "content_scripts": [{
    "matches": ["http://classtab.org/","http://*.classtab.org/"],
    "js": ["inception.js","bower_components/jquery/dist/jquery.min.js"],
    "css": ["inception.css"]
  }]
}
